# Local configuration goes here:


# DO NOT EDIT BELOW THIS LINE
[core]
	excludesfile = ~/.cvsignore
	autocrlf = true
	safecrlf = false
[color]
	ui = auto
	status = always
	diff = always
	branch = auto
	interactive = always
	grep = always
[alias]
	ci = commit
	cia = commit -a
	co = checkout
	stat = status
	st = status --short
	cinum = !git log --pretty=oneline | wc -l | sed -e \"s/ //g\"
	up-sub = "!f() { pushd \"$1\" >/dev/null && git checkout master && git pull && popd >/dev/null && git submodule update --init --recursive; }; f"
	discard = checkout --
	ctags = !.git/hooks/ctags
[push]
	default = current

[init]
	templatedir = ~/.git_template

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[url "git@heroku.com:"]
	insteadOf = "heroku:"
