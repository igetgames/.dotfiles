# Local configuration goes here:


# DO NOT EDIT BELOW THIS LINE
[core]
	excludesfile = ~/.cvsignore
	autocrlf = input
	safecrlf = false
	pager = less -x1,5
[color]
	ui = auto
	status = always
	diff = always
	branch = auto
	interactive = always
	grep = always
[alias]
	ci = commit
	cia = commit -a
	co = checkout
	stat = status
	st = status --short
	dt = difftool --dir-diff
	cinum = !git log --pretty=oneline | wc -l | sed -e \"s/ //g\"
	up-sub = "!f() { (cd \"$1\" && git fetch origin --tags && git checkout master && git pull) }; f"
	rm-sub = "!f() { git rm --cached \"$1\"; rm -r \"$1\"; git config -f .gitmodules --remove-section \"submodule.$1\"; git config -f .git/config --remove-section \"submodule.$1\"; rm -r \".git/modules/$1\"; }; f"
	discard = checkout --
	ctags = !.git/hooks/ctags
	prune-remotes = "!f() { for r in `git remote`; do git remote prune $r; done }; f"
	prune-merged = !git branch -d `git branch --merged | cut -c3- | grep -v ${*:-master}`
	pushall = "!f() { for i in `git remote`; do git push $i; done; }; f"
# Legit
	branches = !legit branches
	graft = !legit graft "$@"
	harvest = !legit harvest "$@"
	publish = !legit publish "$@"
	unpublish = !legit unpublish "$@"
	sprout = !legit sprout "$@"
	sync = !legit sync "$@"
	switch = !legit switch "$@"
[push]
	default = current

[init]
	templatedir = ~/.git_template

[rerere]
	enabled = 1

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[url "git@heroku.com:"]
	insteadOf = "heroku:"
[url "git@c0de4:"]
	insteadOf = "c0de4:"
